<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg_white"
    android:elevation="2dp"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/pantry_low_stock_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
            android:src="@drawable/low_stock"
        />

        <TextView
            android:id="@+id/ingredient_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2x Banana"
            android:textColor="#000000"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|end">

        <TextView
            android:id="@+id/ingredient_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.50/unit"
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/ingredient_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minWidth="24dip"
            android:minHeight="24dip"
            android:textColor="#000000"
            app:icon="@drawable/ic_plus_solid"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="20sp"
            app:iconTint="#000000" />

    </LinearLayout>
</LinearLayout>